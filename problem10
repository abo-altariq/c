#include<iostream>
#include<string>
using namespace std;

enum enpassfail{pass=1,fail=2};

void readmark(int& mark1, int& mark2, int& mark3)
{
	cout << "enter mark1" << endl;
	cin >> mark1;

	cout << "enter mar2" << endl;
	cin >> mark2;

	cout << " enter mark3" << endl;
		
	cin >> mark3;
}

float calculateavreage(int mark1, int mark2, int mark3)
{
	float avreage;
	avreage = (float(mark1) + float(mark2) + float(mark3)) / 3;
	return avreage;
}
enpassfail chekavreage(float avreage)
{
	if (avreage >= 50)
		return enpassfail::pass;
	else
		return enpassfail::fail;
}

void printavreage(float avreage)
{
	cout << "the avreage is" << avreage << endl;
	if (chekavreage(avreage) == enpassfail::pass)
		cout << "pass" << endl;
	else
		cout << "fail" << endl;
}

int main()
{
	int mark1, mark2, mark3;
	readmark(mark1, mark2, mark3);
	printavreage(calculateavreage(mark1, mark2, mark3));

	return 0;
}
