#include<iostream>
#include<string>
using namespace std;
enum enoddoreven{odd=1,even=2};

int readnumbers()
{
	int number;

	cout << "enter n" << endl;

	cin >> number;

	return number;
}
enoddoreven checkoddoreven(int number)
{
	if (number % 2 != 0)

		return enoddoreven::odd;

	else

		return enoddoreven::even;
}
int sumoddnumberusing_while(int n)
{
	int counter = 0;

	int sum = 0;

	cout << "sum odd number using while" << endl;

	while (counter < n)
	{
		counter++;

		if (checkoddoreven(counter) == enoddoreven::odd)
		{
			sum += counter;
		}
	}

	return sum;
}

int sumoddnumberusing_dowhile(int n)
{
	int counter = 0;

	int sum = 0;

	cout << "som odd number using do while" << endl;
	do
	{
		counter++;

		if (checkoddoreven(counter) == enoddoreven::odd)
		{
			sum += counter;

		}
	} while (counter < n);

	return sum;
}
	


int sumoddnumberusing_forloop(int n)
{
	int sum = 0;

	cout << "sum odd number using for loop" << endl;

	

	for (int counter = 1; counter <= n; counter++)

	{
		if (checkoddoreven(counter) == enoddoreven::odd)
		{

			sum += counter;
		}


	}
	return sum;
}

int main()
{
	int n = readnumbers();
	cout << sumoddnumberusing_while(n) << endl;
	cout << sumoddnumberusing_dowhile(n) << endl;

	cout << sumoddnumberusing_forloop(n) << endl;

	return 0;

}
