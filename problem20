#include<iostream>
#include<string>
#include<cmath>
using namespace std;

void ReadAB(float &a,float &b)
{
	
	cout << "enter a" << endl;
	cin >> a;

	cout << "enter b" << endl;
	cin >> b;
	

	
}

float circleArea(float a,float b)
{
	const float PI = 3.14;
	return (PI * pow(b, 2) / 4) * ((2 * a - b) / (2 * a + b));
}

void PrintArea(float area)
{
	cout << "the area is :" << area << endl;
}

int main()
{
	float a, b;
	ReadAB(a, b);
	PrintArea(circleArea(a, b));

	return 0;
}
