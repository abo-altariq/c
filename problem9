#include<iostream>
#include<string>
using namespace std;

void readnumber(int& num1, int& num2, int& num3)
{
	cout << "please enter num1?" << endl;
	cin >> num1;

	cout << "please enter num2?" << endl;
	cin >> num2;

	cout << "please enter num3?" << endl;
	cin >> num3;
}
int calculatethesumof3numbers(int num1, int num2, int num3)
{
	return num1 + num2 + num3;
}

void printresult(int total)
{
	int num1, num2, num3;
	cout << "the sum =" << total << endl;
}

int main()
{
	int num1, num2, num3;
	readnumber(num1, num2, num3);
	printresult(calculatethesumof3numbers(num1, num2, num3));

	return 0;
}
